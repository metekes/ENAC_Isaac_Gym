<?xml version='1.0' encoding='UTF-8'?>
<robot name="box">
  <!-- New link: Extremely thin rectangular prism (as the parent link) -->
  <link name="thin_prism">
    <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 -0.0 0.0"/>
      <mass value="0.1"/> <!-- Adjust the mass as needed -->
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/> <!-- Adjust the inertial values as needed -->
    </inertial>
    <visual name="thin_prism_visual">
      <geometry>
        <box size="0.1 0.01 1.0"/> <!-- Extremely thin prism: 0.1m x 0.01m x 1.0m -->
      </geometry>
      <origin xyz="0 0 -0.5" rpy="0 0 0"/> <!-- Adjust the position (xyz) to place it just above the ground -->
    </visual>
    <collision name="thin_prism_collision">
      <geometry>
        <box size="0.1 0.01 1.0"/> <!-- Same dimensions for collision geometry -->
      </geometry>
      <origin xyz="0 0 -0.5" rpy="0 0 0"/>
    </collision>
  </link>
  
  <link name="box">
    <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 -0.0 0.0"/>
      <mass value="1.0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <visual name="box_visual">
      <geometry>
        <box size="0.1 1.0 1.0"/> <!-- Keep the same dimensions for the box: 0.1m x 1.0m x 1.0m -->
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
    <collision name="box_collision">
      <geometry>
        <box size="0.1 1.0 1.0"/> <!-- Same dimensions for collision geometry -->
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
  </link>
  
  <!-- Fixed joint to attach the box to the thin prism -->
  <joint name="fixed_joint" type="fixed">
    <parent link="box"/>
    <child link="thin_prism"/>
    <origin xyz="0.0 0.495 0.0" rpy="0 0 0"/> <!-- Adjust the joint origin (xyz) to place the box on top of the thin prism -->
  </joint>
</robot>
