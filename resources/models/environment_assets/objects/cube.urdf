<?xml version='1.0' encoding='UTF-8'?>
<robot name="box">
  <link name="base_link">
    <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 -0.0 0.0"/>
      <mass value="0.1"/> <!-- Adjust the mass as needed -->
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/> <!-- Adjust the inertial values as needed -->
    </inertial>
    <visual name="base_link_visual">
      <geometry>
        <box size="1.0 1.0 0.01"/> <!-- Extremely thin prism: 1.0m x 1.0m x 0.01m -->
      </geometry>
      <origin xyz="0.0 0.0 -0.005" rpy="0 0 0"/> <!-- Adjust the position (xyz) to place it just above the ground -->
    </visual>
    <collision name="base_link_collision">
      <geometry>
        <box size="1.0 1.0 0.01"/> <!-- Same dimensions for collision geometry -->
      </geometry>
      <origin xyz="0.0 0.0 -0.005" rpy="0 0 0"/>
    </collision>
  </link>
  
  <link name="cube">
    <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 -0.0 0.0"/>
      <mass value="1.0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <visual name="cube_visual">
      <geometry>
        <box size="1.0 1.0 1.0"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
    <collision name="cube_collision">
      <geometry>
        <box size="1.0 1.0 1.0"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
  </link>
  
  <!-- Fixed joint to attach the cube to the thin prism -->
  <joint name="fixed_joint" type="fixed">
    <parent link="cube"/>
    <child link="base_link"/>
    <origin xyz="0 0 -0.005" rpy="0 0 0"/> <!-- Adjust the joint origin (xyz) to place the cube on top of the prism -->
  </joint>

</robot>

